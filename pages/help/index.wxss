page{
  background:#FCF8E8;
}
.bg{
  width: 100%;
  position: absolute;
  z-index: -100;
}
.bg image{
  width: 100%;
}
.box{
  width: 90%;
  margin: 20rpx auto;
}
.banner-box{
  margin: 0 auto;
  padding-top: 60rpx;
}
.btn-box{
  width:75%;
  margin: 80rpx auto;
}
.explain-box{
  color:rgba(156, 84, 32, 1);
  font-size: 18rpx;
  margin: 40rpx auto;
}
.explain-box .title{
  font-size: 24rpx
}
.qrcode-box{
  width:440rpx;
  margin: 40rpx auto 80rpx auto;
  border:20rpx solid #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(255, 147, 38, 0.2);
  box-sizing: border-box;
}