page{
  font-size:30rpx;
}
.my-coins {
  color: #ffffff;
}
.coin-box{
  display:inline-block;
  margin:0 30rpx 30rpx 0;
}
.title{
  width:80rpx;
  height: 35rpx;
  margin-bottom: 10rpx;
}
.quantity{
  padding: 10rpx 30rpx 10rpx 20rpx;
  background-color: #944509;
  border-radius: 50rpx;
  font-size:32rpx;
  font-weight: bold;
  left:-15rpx;
  height:50rpx;
  position: relative;
}
.coins,.ore{
  width:45rpx;
  height:45rpx;
  vertical-align: middle;
  margin-right:10rpx;
}
.statistics{
  color:#944509;
  line-height: 60rpx;
  font-weight: bold;
}
.userinfo{
  position: absolute;
  right:20rpx;
  top:30rpx;
  text-align: right;
}
.userinfo-avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius:100%;
  overflow: hidden;
  border:6rpx solid #ffffff;
  margin:0 auto;
}
.userinfo-nickname {
  font-size: 32rpx;
  color:#944509;
  margin:5px auto;
}
.popContent{
  width:100%;
  padding:20rpx;
  box-sizing: border-box;
}