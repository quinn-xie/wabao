.i-divider {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.i-divider-line {
  position: absolute;
  left: 0;
  width: 100%;
  height: 1rpx;
  background-color: #f7f7f7;
  top: 50%;
}

.i-divider-content {
  background: #FCF8E8;
  font-size: 28rpx;
  position: relative;
  z-index: 1;
  display: inline-block;
  padding: 0 10px;
}
