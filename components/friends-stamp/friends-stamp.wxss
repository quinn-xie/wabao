.friends-stamp{
  width: 90%;
  background:#ffffff;
  border:10rpx solid #ffc951;
  border-radius: 20rpx;
  position: relative;
  margin: 0 auto;
  padding:50rpx 10rpx 50rpx 30rpx;
  box-sizing: border-box;
  color:#000000;
  font-size: 24rpx;
}
.friends-stamp .title{
  width: 300rpx;
  position: absolute;
  top:-50rpx;
  left: 50%;
  margin-left:-150rpx;
}
.friends-stamp .title image{
  width:100%;
}
.friends-stamp .sub-title{
  text-align: center;
  font-size: 20rpx;
  color:#FF4C23;
}